<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="ng.cheo.android.singapore.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_margin="16dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/qn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Which continent does Singapore located at?"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/qn1_ans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textNoSuggestions"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/qn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What are the colours found on Singapore flag?"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/qn2_red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Red"
                            android:onClick="qnTwoCheckboxClicked" />
                        <CheckBox
                            android:id="@+id/qn2_blue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qn2_red"
                            android:text="Blue"
                            android:onClick="qnTwoCheckboxClicked" />
                        <CheckBox
                            android:id="@+id/qn2_purple"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qn2_blue"
                            android:text="Purple"
                            android:onClick="qnTwoCheckboxClicked"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/qn2_yellow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yellow"
                            android:onClick="qnTwoCheckboxClicked" />
                        <CheckBox
                            android:id="@+id/qn2_green"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qn2_yellow"
                            android:text="Green"
                            android:onClick="qnTwoCheckboxClicked" />
                        <CheckBox
                            android:id="@+id/qn2_white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qn2_green"
                            android:text="White"
                            android:onClick="qnTwoCheckboxClicked" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Which languages are official languages of Singapore?"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/qn3_english"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:onClick="qnThreeCheckboxClicked" />
                        <CheckBox
                            android:id="@+id/qn3_spanish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qn3_english"
                            android:text="Spanish"
                            android:onClick="qnThreeCheckboxClicked" />
                        <CheckBox
                            android:id="@+id/qn3_malay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qn3_spanish"
                            android:text="Malay"
                            android:onClick="qnThreeCheckboxClicked" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/qn3_mandarin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mandarin"
                            android:onClick="qnThreeCheckboxClicked" />
                        <CheckBox
                            android:id="@+id/qn3_tamil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qn3_mandarin"
                            android:text="Tamil"
                            android:onClick="qnThreeCheckboxClicked" />
                        <CheckBox
                            android:id="@+id/qn3_japanese"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qn3_tamil"
                            android:text="Japanese"
                            android:onClick="qnThreeCheckboxClicked" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Can you legally purchase/sell chewing gum in Singapore?"
                    android:layout_weight="1"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/qn4_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:onClick="qnFourRadioClicked"/>
                    <RadioButton
                        android:id="@+id/qn4_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:onClick="qnFourRadioClicked"/>
                </RadioGroup>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffffff"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="Submit"
                android:onClick="submitQuiz"/>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
